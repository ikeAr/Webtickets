@using WebTickets.Repo;
@model WebTickets.RequestModel


<style type="text/css">
    body {
        background-image: url(/Content/z4.jpg);
        background-size: cover;
    }

    h1 {
        font-size: 40px;
        text-align: center;
        letter-spacing: 15px;
        color: gray;
        font-family: STKaiti;
        margin-bottom: 30px;
    }

    tr td:nth-child(9) {
        font-weight: 100;
        border-radius: 10%;
        font-size: 17px;
        color: #000000;
    }

    table tr {
        background-color: #E6E6FA;
    }

    table th:nth-child(even) {
        background-color: #000088;
    }

    table th:nth-child(odd) {
        background-color: #5599FF;
    }



    .table_content {
        margin: 5px;
        border: 1px dashed #FFF0F5;
        width: 1000px;
        height: 375px;
        margin-left: 60px;
        overflow-x: hidden;
        overflow-y: auto;
    }


        .table_content table {
            width: 100%;
            border: 0;
            border-collapse: collapse;
            font-size: 12px;
        }


            .table_content table th {
                border-collapse: collapse;
                height: 60px;
                color: white;
                text-align: center;
                font-size: 20px;
                border: 1px dotted white;
            }

            .table_content table td {
                height: 40px;
                word-wrap: break-word;
                max-width: 300px;
                text-align: center;
                vertical-align: middle;
                border: 1px dotted white;
            }
</style>
<h1>所有订单</h1>
<div class="center_center">
    <div class="table_content">
        <table border="1">
            <thead>
                <tr>
                    <th width="11%">@Html.LabelFor(m => m.StudentId)</th>
                    <th width="11%">@Html.LabelFor(m => m.UserName)</th>
                    <th width="11%">@Html.LabelFor(m => m.ProblemTitle)</th>
                    <th width="11%">@Html.LabelFor(m => m.Level)</th>
                    <th width="11%">@Html.LabelFor(m => m.Telephone)</th>
                    <th width="11%">@Html.LabelFor(m => m.Location)</th>
                    <th width="12%">@Html.LabelFor(m => m.ExpectTime)</th>
                    <th width="11%">@Html.LabelFor(m => m.Maintainer)</th>
                    <th width="11%">@Html.LabelFor(m => m.Condition)</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var requestRepo = new RequestRepo();
                }
                @foreach (var request in requestRepo.GetAll())
                {
                    <tr>
                        <td width="11%">@request.StudentId</td>
                        <td width="11%">@request.UserName</td>
                        <td width="11%">@request.ProblemTitle</td>
                        <td width="11%">@request.Level</td>
                        <td width="11%">@request.Telephone</td>
                        <td width="11%">@request.Location</td>
                        <td width="12%">@request.ExpectTime</td>
                        <td width="11%">@request.Maintainer</td>
                        <td width="11%" class="condition" id="Condition-@request.Id" value="">@request.Condition</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script>
        $(".condition").each(function (i, e) {//两个参数
            if (e.innerHTML == "0") {
                e.innerHTML = "待处理";
            } else if (e.innerHTML == '1') {
                e.innerHTML = "已接收";
            }
        })
    </script>
}
